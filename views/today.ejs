<%- include("header") %>

<nav>
    <div class="todayblock">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="13" fill="currentColor" class="bi bi-calendar3" viewBox="0 0 16 16">
            <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"/>
            <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
          </svg>
        <a  href="/">Today</a>
    </div>
    
</nav>

<div id="title">
    <!-- <h1>Monday, September 11</h1> -->
    <h1><%= name %></h1>
    <h1><%= month %>  <%= date %> <%= year %></h1>
</div>
<div class="heroContent">
    <%  today_item.forEach(function(item){ %>
        <form action="/delete" method="post">
             <div class="item">
             <input type="checkbox" name="Checkbox" value="<%= item._id %>" onchange="this.form.submit()">
             <p><%= item.name %></p>
            </div>
            <input type="hidden" name="ListName" value="<%= name %>">
        </form>
    <%  }) %>
        

    <form class="item" action="/" method="post">
        <input  type="text" name="NewItem" id="New_Item" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value="<%= name %>">+</button>
    </form>
</div>



<%- include("footer") %>